{
  "name": "noclue",
  "version": "1.0.0",
  "description": "Full-stack application with Next.js frontend and NestJS backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "common",
    "backend/services/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run start:dev --workspace=backend",
    "dev:matching": "npm run start:dev --workspace=@noclue/matching-service",
    "dev:question": "npm run start:dev --workspace=@noclue/question-service",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build": "npm run build:common && npm run build:frontend && npm run build:backend",
    "build:common": "npm run build --workspace=common",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start:prod --workspace=backend",
    "dev:collaboration": "npm run start:dev --workspace=@noclue/collaboration-service",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.20",
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=9.0.0"
  }
}
