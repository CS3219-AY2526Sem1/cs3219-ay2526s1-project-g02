{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/",
    "<rootDir>/../../../common/dist/"
  ],
  "testEnvironment": "node",

  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "modulePaths": [
    "<rootDir>"
  ]
}