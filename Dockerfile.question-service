# Stage 1: Build
FROM node:20-alpine AS builder
WORKDIR /app

# Copy workspace configuration
COPY package*.json ./

# Copy backend workspace configuration
COPY backend/package*.json ./backend/
COPY backend/tsconfig.json ./backend/tsconfig.json

# Copy all service package.json files (needed for workspace resolution)
COPY backend/services/user-service/package*.json ./backend/services/user-service/
COPY backend/services/matching-service/package*.json ./backend/services/matching-service/
COPY backend/services/question-service/package*.json ./backend/services/question-service/
COPY backend/services/collaboration-service/package*.json ./backend/services/collaboration-service/

# Copy common package.json
COPY common/package*.json ./common/

# Install ALL dependencies at root (sets up workspace links and installs all deps)
RUN npm install

# Now copy the actual source files
COPY common ./common
COPY backend/services/question-service ./backend/services/question-service

# Build common package FIRST (makes it available as local package)
RUN npm run build:common

# Move to service directory for NestJS build (needs to find nest-cli.json and tsconfig.json)
WORKDIR /app/backend/services/question-service

# Build service (dependencies already installed by root npm install, no npm install here!)
RUN npm run build

# Stage 2: Production
FROM node:20-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production

# Copy root package.json for workspace structure
COPY package*.json ./

# Copy built common package
COPY --from=builder /app/common ./common

# Copy built service and its dependencies
COPY --from=builder /app/backend/services/question-service/dist ./backend/services/question-service/dist
COPY --from=builder /app/backend/services/question-service/package*.json ./backend/services/question-service/
COPY --from=builder /app/backend/services/question-service/.env* ./backend/services/question-service/

# Install production dependencies only
RUN npm install --workspace=@noclue/common --workspace=@noclue/question-service --omit=dev

EXPOSE 4002

ENV PORT=4002

WORKDIR /app/backend/services/question-service

CMD ["node", "dist/main.js"]
