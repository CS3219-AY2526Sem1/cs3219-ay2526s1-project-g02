# Stage 1: Build
FROM node:20-alpine AS builder
WORKDIR /app

# Copy workspace configuration
COPY package*.json ./

# Copy backend workspace configuration
COPY backend/package*.json ./backend/
COPY backend/tsconfig.json ./backend/tsconfig.json

# Copy all workspace source files
COPY common ./common
COPY backend/services/collaboration-service ./backend/services/collaboration-service

# Install ALL dependencies at root (sets up workspace links and installs all deps)
RUN npm install

# Build common package FIRST (makes it available as local package)
RUN npm run build:common

# Move to service directory for NestJS build (needs to find nest-cli.json and tsconfig.json)
WORKDIR /app/backend/services/collaboration-service

# Build service (dependencies already installed by root npm install, no npm install here!)
RUN npm run build

# Stage 2: Production
FROM node:20-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production

# Copy root package.json for workspace structure
COPY package*.json ./

# Copy built common package
COPY --from=builder /app/common ./common

# Copy built collaboration service and its dependencies
COPY --from=builder /app/backend/services/collaboration-service/dist ./backend/services/collaboration-service/dist
COPY --from=builder /app/backend/services/collaboration-service/package*.json ./backend/services/collaboration-service/
COPY --from=builder /app/backend/services/collaboration-service/.env* ./backend/services/collaboration-service/

# Install production dependencies only
RUN npm install --workspace=@noclue/common --workspace=@noclue/collaboration-service --omit=dev

EXPOSE 4004 1234

ENV PORT=4004
ENV YJS_PORT=1234

WORKDIR /app/backend/services/collaboration-service

CMD ["node", "dist/main.js"]
